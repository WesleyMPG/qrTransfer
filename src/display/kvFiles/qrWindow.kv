#:kivy 2.2.1
#:include display/kvFiles/settings_screen.kv

<QrFrameScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        
        FloatLayout:
            size_hint: (1, .2)
            Label:
                id: txt
                text: "DON"
                font_size: 22
                size_hint: (1, 1)
                pos_hint: {'center_x': .5, 'center_y': .5}
                canvas.before:
                    Color:
                        rgba: 1, .4, .4, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            MDIconButton:
                id: config_btn
                size_hint: (.08, .31)
                pos_hint: {'x': .91, 'y': .62}
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'settings'
                icon: 'cog'
                
        Image:
            id: img
            size_hint: (1, .8)
